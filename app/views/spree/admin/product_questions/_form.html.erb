<div data-hook="admin_product_question_form_fields">
  <%= f.field_container :content, class: ['form-group'] do %>
    <%= f.label :content, "#{Spree::ProductQuestion.model_name.human}*" %>
    <%= f.text_area :content, { rows: 4, class: 'form-control' } %>
    <%= f.error_message_on :content %>
  <% end %>

  <%= f.fields_for :product_answer, @product_question.answer_for_form, class: ['form-group'] do |a| %>
    <%= a.label :content, raw(Spree::ProductAnswer.model_name.human + content_tag(:span, ' *', class: 'required')) %>
    <%= a.text_area :content, { rows: "4", class: 'form-control' } %>
  <% end %>

  <%= f.field_container :user_id, class: ['form-group'], style: 'margin-top: 10px;' do %>
    <%= f.label :user_id, Spree.t(:user) %>
    <%= f.select(:user_id, options_from_collection_for_select(Spree::User.all, 'id', 'email'), { include_blank: Spree.t('products_qa.select_user') }, { class: 'select2' }) %>
  <% end %>

  <div class="row form-group" style="margin-top: 20px;">
    <div class="col-12 col-md-6">
      <%= f.field_container :full_name do %>
        <%= f.label :full_name, raw(Spree.t('products_qa.full_name')) %>
        <%= f.text_field :full_name, class: "form-control" %>
        <%= f.error_message_on :full_name %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :email do %>
        <%= f.label :email, raw(Spree.t('products_qa.email')) %>
        <%= f.text_field :email, class: "form-control" %>
        <%= f.error_message_on :email %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.field_container :is_visible, class: ['form-group'] do %>
        <%= f.check_box :is_visible %>
        <%= f.label :is_visible %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :is_anonymous, class: ['form-group'] do %>
        <%= f.check_box :is_anonymous %>
        <%= f.label :is_anonymous %>
      <% end %>
    </div>
  </div>
</div>

